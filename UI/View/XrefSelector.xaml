<UserControl x:Class="EpicLumExporter.UI.View.XrefSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EpicLumExporter.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250">
    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" >
        <TextBlock Text="Select Xref to read Lums from" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10"/>
        <ListBox ItemsSource="{Binding xrefs}" SelectedIndex="{Binding selectedIndex}"/>
        <Button Content="OK" VerticalAlignment="Bottom" Command="{Binding btnOK}"/>

    </StackPanel>
</UserControl>
